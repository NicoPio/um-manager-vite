{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "types": [
      "node"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/store/index.ts"
  ]
}